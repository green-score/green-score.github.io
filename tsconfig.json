{
  "compilerOptions": {
    "target": "ES2020", // which level of JS support to target
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "outDir": "dist", // where to put the compiled JS files

    // Recommended: Compiler complains about expressions implicitly typed as 'any'
    "noImplicitAny": true,
  },
  "include": ["src"],
  "exclude": ["./node_modules", "./webpack.config.ts", "./babel.config.ts"], // which files to skip
}
